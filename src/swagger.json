{
  "openapi": "3.0.0",
  "info": {
    "title": "Sample Car Rental Documentation",
    "version": "1.0.0"
  },
  "paths": {
    "/rules": {
      "get": {
        "tags": ["Rule"],
        "summary": "List Rules",
        "description": "List all cars rules",

        "responses": {
          "200": {
            "description": "Sucessful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type":"object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal error"
          }
        }
      },
      "post": {
        "tags": ["Rule"],
        "summary": "Create Rule",
        "description": "Create a new rule of cars",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/Specification"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Specification already exists"
          }
        }
      }
    },
    "/rules/import": {
      "post": {
        "tags": ["Rule"],
        "summary": "Upload a new rule",
        "description": "Upload a new rule",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          }
        }
      }
    },
    "/specifications": {
      "post": {
        "tags": ["Specification"],
        "summary": "Create Specification",
        "description": "Create a new specification of cars",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "SUV",
                  "description": "A Huge car"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "422": {
            "description": "Invalid entries"
          },
          "500": {
            "description": "Internal error"
          }
        }
      }
    }
  },
  "definitions": {
    "Specification": {
      "name": {
        "type": "string"
      },
      "description": {
        "type": "string"
      }
    }
  }
}
