{
  "openapi": "3.0.0",
  "info": {
    "title": "Sample Car Rental Documentation",
    "version": "1.0.0"
  },
  "paths": {
    "/rules": {
      "get": {
        "tags": ["Rule"],
        "summary": "List Rules",
        "description": "List all rules",

        "responses": {
          "200": {
            "description": "Sucessful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type":"object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "rule": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal error"
          }
        }
      },
      "post": {
        "tags": ["Rule"],
        "summary": "Create Rule",
        "description": "Create a new rule",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "rule": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Rule already exists"
          }
        }
      }
    },
    "/rules/analyze": {
      "post": {
        "tags": ["Rule"],
        "summary": "Send a text to be analyzed by yara giving the rules",
        "description": "Send a text to be analyzed",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "text": {
                    "type": "string"
                  },
                  "rules": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "rule_id": {
                          "type": "number"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type":"object",
                    "properties": {
                      "error": {
                        "type": "boolean"
                      },
                      "results": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "rule_id": {
                              "type": "number"
                            },
                            "matched": {
                              "type": "boolean"
                            }
                          }
                        }
                      }
                    }
                  }
              }
            }
          }
        }
      }
    },
    "/rules/analyze/file": {
      "post": {
        "tags": ["Rule"],
        "summary": "Upload a new file to be analyzed by yara giving the rules",
        "description": "Upload a new file to be analyzed",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  },
                  "rules": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type":"object",
                    "properties": {
                      "error": {
                        "type": "boolean"
                      },
                      "results": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "rule_id": {
                              "type": "number"
                            },
                            "matched": {
                              "type": "boolean"
                            }
                          }
                        }
                      }
                    }
                  }
              }
            }
          }
        }
      }
    }
  }
}
